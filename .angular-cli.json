{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "project": {
        "name": "@bexio/components"
    },
    "apps": [
        {
            "root": "src",
            "outDir": "dist",
            "assets": [
                "assets",
                "favicon.ico",
                {
                    "glob": "**/*",
                    "input": "../node_modules/@bexio/design/assets/icons",
                    "output": "./assets/icons/"
                }
            ],
            "index": "index.html",
            "main": "main.ts",
            "polyfills": "polyfills.ts",
            "tsconfig": "tsconfig.app.json",
            "prefix": "bx",
            "styles": [
                "styles.scss",
                "../node_modules/font-awesome/css/font-awesome.css"
            ],
            "scripts": []
        }
    ],
    "defaults": {
        "styleExt": "scss",
        "prefixInterfaces": false,
        "inline": {
            "style": false,
            "template": false
        },
        "spec": {
            "class": false,
            "component": true,
            "directive": true,
            "module": false,
            "pipe": true,
            "service": true
        }
    }
}
